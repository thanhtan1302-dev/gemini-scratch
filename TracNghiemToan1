    <script>
        let currentRound = 1;
        let currentQuestionIdx = 0;
        let score = 0;
        let questions = [];
        const totalQuestionsPerRound = 10;
        const totalRounds = 5;

        const screens = {
            start: document.getElementById('start-screen'),
            quiz: document.getElementById('quiz-screen'),
            result: document.getElementById('result-screen')
        };

        function showScreen(screenKey) {
            Object.values(screens).forEach(s => s.classList.add('hidden'));
            screens[screenKey].classList.remove('hidden');
        }

        function generateQuestions(round) {
            const newQuestions = [];
            for (let i = 0; i < totalQuestionsPerRound; i++) {
                let a, b, op, ans;
                
                switch(round) {
                    case 1: // C·ªông tr·ª´ ph·∫°m vi 10
                        op = Math.random() > 0.5 ? '+' : '-';
                        if (op === '+') {
                            a = Math.floor(Math.random() * 6);
                            b = Math.floor(Math.random() * (10 - a));
                            ans = a + b;
                        } else {
                            a = Math.floor(Math.random() * 11);
                            b = Math.floor(Math.random() * (a + 1));
                            ans = a - b;
                        }
                        break;
                    case 2: // C·ªông tr·ª´ ph·∫°m vi 20
                        op = Math.random() > 0.5 ? '+' : '-';
                        if (op === '+') {
                            a = Math.floor(Math.random() * 11) + 5;
                            b = Math.floor(Math.random() * (20 - a));
                            ans = a + b;
                        } else {
                            a = Math.floor(Math.random() * 11) + 10;
                            b = Math.floor(Math.random() * (a + 1));
                            ans = a - b;
                        }
                        break;
                    case 3: // T√¨m x (√¥ tr·ªëng) c∆° b·∫£n
                        a = Math.floor(Math.random() * 10);
                        ans = Math.floor(Math.random() * 10);
                        let sum = a + ans;
                        newQuestions.push({
                            q: `${a} + ? = ${sum}`,
                            options: generateOptions(ans),
                            answer: ans
                        });
                        continue;
                    case 4: // C·ªông tr·ª´ tr√≤n ch·ª•c trong ph·∫°m vi 100
                        a = (Math.floor(Math.random() * 9) + 1) * 10;
                        b = (Math.floor(Math.random() * (a/10))) * 10;
                        op = Math.random() > 0.5 ? '+' : '-';
                        if (op === '+') {
                            b = (Math.floor(Math.random() * ((100-a)/10)) + 1) * 10;
                            ans = a + b;
                        } else {
                            ans = a - b;
                        }
                        break;
                    case 5: // H·ªón h·ª£p c·ªông tr·ª´ 2 ch·ªØ s·ªë (kh√¥ng nh·ªõ/c√≥ nh·ªõ nh·∫π)
                        a = Math.floor(Math.random() * 40) + 10;
                        b = Math.floor(Math.random() * 40) + 1;
                        op = Math.random() > 0.5 ? '+' : '-';
                        ans = op === '+' ? a + b : a - b;
                        break;
                }

                newQuestions.push({
                    q: `${a} ${op} ${b} = ?`,
                    options: generateOptions(ans),
                    answer: ans
                });
            }
            return newQuestions;
        }

        function generateOptions(correctAnswer) {
            let opts = new Set([correctAnswer]);
            while (opts.size < 4) {
                let offset = Math.floor(Math.random() * 5) + 1;
                let wrong = Math.random() > 0.5 ? correctAnswer + offset : correctAnswer - offset;
                if (wrong >= 0) opts.add(wrong);
            }
            return Array.from(opts).sort(() => Math.random() - 0.5);
        }

        function startGame() {
            currentRound = 1;
            score = 0;
            startRound();
        }

        function startRound() {
            currentQuestionIdx = 0;
            questions = generateQuestions(currentRound);
            document.getElementById('current-round').innerText = currentRound;
            document.getElementById('score').innerText = score;
            showScreen('quiz');
            loadQuestion();
        }

        function loadQuestion() {
            const qData = questions[currentQuestionIdx];
            document.getElementById('question-text').innerText = qData.q;
            document.getElementById('question-num').innerText = currentQuestionIdx + 1;
            
            const progress = ((currentQuestionIdx) / totalQuestionsPerRound) * 100;
            document.getElementById('progress-fill').style.width = `${progress}%`;

            const container = document.getElementById('options-container');
            container.innerHTML = '';
            
            qData.options.forEach(opt => {
                const btn = document.createElement('button');
                btn.className = 'option-btn py-4 px-6 text-2xl font-bold rounded-2xl bg-white text-gray-700';
                btn.innerText = opt;
                btn.onclick = () => checkAnswer(opt, btn);
                container.appendChild(btn);
            });
        }

        function checkAnswer(selected, btn) {
            const correct = questions[currentQuestionIdx].answer;
            const allBtns = document.querySelectorAll('.option-btn');
            allBtns.forEach(b => b.disabled = true);

            if (selected === correct) {
                btn.classList.add('correct');
                score += 1;
            } else {
                btn.classList.add('incorrect');
                score = Math.max(0, score - 1); // Kh√¥ng ƒë·ªÉ ƒëi·ªÉm √¢m n·∫øu b·∫°n mu·ªën, ho·∫∑c c·ª© tr·ª´
                // Hi·ªÉn th·ªã ƒë√°p √°n ƒë√∫ng
                allBtns.forEach(b => {
                    if (parseInt(b.innerText) === correct) b.classList.add('correct');
                });
            }

            document.getElementById('score').innerText = score;

            setTimeout(() => {
                currentQuestionIdx++;
                if (currentQuestionIdx < totalQuestionsPerRound) {
                    loadQuestion();
                } else {
                    showRoundResult();
                }
            }, 1200);
        }

        function showRoundResult() {
            showScreen('result');
            document.getElementById('final-score').innerText = score;
            
            if (currentRound < totalRounds) {
                document.getElementById('result-title').innerText = "Th·∫≠t Tuy·ªát V·ªùi! üéâ";
                document.getElementById('result-message').innerText = `B√© ƒë√£ ho√†n th√†nh V√≤ng ${currentRound}. S·∫µn s√†ng cho th·ª≠ th√°ch kh√≥ h∆°n ch∆∞a?`;
                document.getElementById('next-btn').innerText = "Sang V√≤ng Ti·∫øp Theo";
            } else {
                document.getElementById('result-title').innerText = "üèÜ CHI·∫æN TH·∫ÆNG!";
                document.getElementById('result-message').innerText = "Ch√∫c m·ª´ng b√© ƒë√£ v∆∞·ª£t qua t·∫•t c·∫£ c√°c th·ª≠ th√°ch to√°n h·ªçc!";
                document.getElementById('next-btn').innerText = "Ch∆°i L·∫°i T·ª´ ƒê·∫ßu";
            }
        }

        function nextAction() {
            if (currentRound < totalRounds) {
                currentRound++;
                startRound();
            } else {
                startGame();
            }
        }
    </script>
</body>
</html>
